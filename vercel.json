{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "installCommand": "npm install --prefix server && npm install --prefix client",
  "outputDirectory": "client/dist",
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10,
      "includeFiles": "server/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
